<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #121212; -fx-border-color: #2199dd; -fx-border-width: 4px;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.sfm.controller.StorageProductController">
   <children>
      <Label fx:id="label" layoutX="50.0" layoutY="15.0" prefWidth="300.0" style="-fx-alignment: baseline_center;" text="Label" textFill="#2199dd">
         <font>
            <Font name="Segoe UI Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="15.0" layoutY="55.0" style="-fx-alignment: baseline_center;" text="Mennyiség módosítása" textFill="#2199dd">
         <font>
            <Font name="Segoe UI Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="15.0" layoutY="115.0" style="-fx-alignment: baseline_center;" text="Jelenlegi ár" textFill="#2199dd">
         <font>
            <Font name="Segoe UI Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="15.0" layoutY="175.0" style="-fx-alignment: baseline_center;" text="Ár beállítása" textFill="#2199dd">
         <font>
            <Font name="Segoe UI Bold" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="quantityTextField" layoutX="235.0" layoutY="85.0" onKeyTyped="#onKeyTypedValidate" prefHeight="26.0" prefWidth="150.0" style="-fx-padding: 0; -fx-background-color: transparent; -fx-border-color: #2199dd; -fx-border-width: 0px 0px 2px 0px; -fx-alignment: baseline_right; -fx-opacity: 1; -fx-text-fill: white">
         <font>
            <Font name="Segoe UI" size="20.0" />
         </font>
      </TextField>
      <TextField fx:id="newPriceTextField" layoutX="235.0" layoutY="205.0" prefHeight="26.0" prefWidth="150.0" style="-fx-padding: 0; -fx-background-color: transparent; -fx-border-color: #2199dd; -fx-border-width: 0px 0px 2px 0px; -fx-alignment: baseline_right; -fx-opacity: 1; -fx-text-fill: white">
         <font>
            <Font name="Segoe UI" size="20.0" />
         </font>
      </TextField>
      <TextField fx:id="actualPriceTextField" disable="true" layoutX="235.0" layoutY="145.0" prefHeight="26.0" prefWidth="150.0" style="-fx-padding: 0; -fx-background-color: transparent; -fx-border-color: #2199dd; -fx-border-width: 0px 0px 2px 0px; -fx-alignment: baseline_right; -fx-opacity: 1; -fx-text-fill: white">
         <font>
            <Font name="Segoe UI" size="20.0" />
         </font>
      </TextField>
      <Button fx:id="saveBtn" layoutX="235.0" layoutY="265.0" mnemonicParsing="false" onAction="#onActionStorageSelectionSave" style="-fx-background-color: transparent; -fx-border-color: rgb(40, 220, 40); -fx-border-radius: 50%; -fx-border-width: 2px;" text="Mentés" textFill="WHITE">
         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="cancelBtn" layoutX="319.0" layoutY="265.0" mnemonicParsing="false" onAction="#onActionStorageSelectionCancel" style="-fx-background-color: transparent; -fx-border-color: rgb(220, 40, 40); -fx-border-radius: 50%; -fx-border-width: 2px;" text="Mégse" textFill="WHITE">
         <font>
            <Font name="Segoe UI" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
